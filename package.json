{
  "name": "sass",
  "version": "1.0.0",
  "description": "Example de projet sass",
  "scripts": {
    "lint:css": "stylelint **/*.scss",
    "prettier": "prettier --write",
    "test": "npm run lint:css"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/philwronski/codeguide.git"
  },
  "author": "Philippe Wronski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/philwronski/codeguide/issues"
  },
  "homepage": "https://github.com/philwronski/codeguide#readme",
  "devDependencies": {
    "autoprefixer": "^8.6.5",
    "eslint-config-prettier": "^2.9.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "postcss": "^6.0.23",
    "prettier": "1.13.7",
    "sass-loader": "^7.0.3",
    "stylelint": "^9.3.0",
    "stylelint-config-airbnb": "0.0.0",
    "stylelint-config-prettier": "^3.3.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-order": "^0.8.1",
    "stylelint-scss": "^3.1.3",
    "webpack": "^4.16.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:css"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{scss}": [
        "lint:css",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.css"
    ]
  }
